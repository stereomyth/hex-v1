  body
    each colour, index in data
      - let hex = `#${colour.hex}`
      - let nextHex = data[index+1] ? `#${data[index+1].hex}` : hex
      .entry(style={background: hex})
        .pinned
          .title
            h1= hex
            p= colour.definition
        .gradient(style={background:`linear-gradient(${ hex }, ${ nextHex })`})



